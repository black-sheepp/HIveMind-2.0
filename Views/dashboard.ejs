<link rel="stylesheet" href="/CSS/dashboard.css" />

<div class="container m-0" id="feed-post">
     <form action="/post/create" id="new-post-form" method="post">
          <h5>Query</h5>
          <div class="form-floating">
               <textarea
                    class="form-control"
                    placeholder="Leave a comment here"
                    style="resize: none; border: 3px solid black; height: 100px; width: 100%"
                    name="content"
               ></textarea>
               <label for="floatingTextarea">Post Your Query Here...</label>
          </div>
          <button type="submit" class="mt-2 btn btn-dark">Post</button>
     </form>

     <% for(post of posts){ %>
     <div class="container mx-0 px-0 my-4" width="50%" style="border: 2px solid black; border-radius: 10px">
          <%- include('post-card') %>
     </div>
     <% } %>
</div>

<div class="container">
     <ul class="list-group" style="width: 50%; float: right">
          <h5>Friends</h5>
          <li class="list-group-item">An item</li>
     </ul>
</div>
