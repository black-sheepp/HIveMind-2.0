<link rel="stylesheet" href="/CSS/dashboard.css" />

<div class="container m-0" id="feed-post">
     <form action="/post/create" id="new-post-form" method="post" style="margin-bottom: 60px">
          <h5>Query</h5>
          <div class="form-floating">
               <textarea
                    class="form-control"
                    placeholder="Leave a comment here"
                    style="resize: none; border: 3px solid black; height: 100px; width: 100%"
                    name="content"
                    required
               ></textarea>
               <label for="floatingTextarea">What's on your mind?</label>
          </div>
          <button type="submit" class="mt-2 btn btn-dark" style="float: left; width: 200px">Post</button>
     </form>

     <% for(post of posts){ %>
     <div class="container mx-0 px-0 my-4" width="50%" style="border: 2px solid black; border-radius: 10px">
          <%- include('post-card') %>
     </div>
     <% } %>
</div>

<div class="container">
     <ul class="list-group" style="width: 40%; float: right">
          <h5>
               <i class="fa-solid fa-user-group" style="color: #37ff8b"></i>
               Friends
          </h5>
          <li class="list-group-item d-flex flex-column" style="font-weight: bold">
               <% for(friend of friendList) {%>
                    <a href="/user/profile/<%= friend.id  %>" style="text-decoration: none; color: black; margin: 0" class="d-flex">
                         <p style="color: #37ff8b; font-weight: bold">| &nbsp;</p>
                         <%= friend.firstName %> <%= friend.lastName %>
                    </a>
               <% } %>
          </li>
     </ul>
</div>
